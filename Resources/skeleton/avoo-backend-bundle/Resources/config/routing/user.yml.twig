{{ applicationName|lower }}_backend_user_index:
    path: /
    methods: [GET]
    defaults:
        _controller: {{ applicationName|lower }}.controller.user:indexAction
        _sylius:
            template: {{ applicationName }}BackendBundle:User:index.html.twig
            sortable: true

{{ applicationName|lower }}_backend_user_create:
    path: /add
    methods: [GET, POST]
    defaults:
        _controller: {{ applicationName|lower }}.controller.user:createAction
        _sylius:
            template: {{ applicationName }}BackendBundle:User:create.html.twig
            redirect: {{ applicationName|lower }}_backend_user_show

{{ applicationName|lower }}_backend_user_update:
    path: /edit/{id}
    methods: [GET, PUT, POST]
    defaults:
        _controller: {{ applicationName|lower }}.controller.user:updateAction
        _sylius:
            template: {{ applicationName }}BackendBundle:User:update.html.twig
            redirect: {{ applicationName|lower }}_backend_user_show

{{ applicationName|lower }}_backend_user_show:
    path: /show/{id}
    methods: [GET]
    defaults:
        _controller: {{ applicationName|lower }}.controller.user:showAction
        _sylius:
            template: {{ applicationName }}BackendBundle:User:show.html.twig
