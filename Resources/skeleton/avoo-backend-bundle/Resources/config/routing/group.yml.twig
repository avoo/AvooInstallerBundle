{{ applicationName|lower }}_backend_group_index:
    path: /
    methods: [GET]
    defaults:
        _controller: {{ applicationName|lower }}.controller.group:indexAction
        _sylius:
            template: {{ applicationName }}BackendBundle:Group:index.html.twig

{{ applicationName|lower }}_backend_group_create:
    path: /add
    methods: [GET, POST]
    defaults:
        _controller: {{ applicationName|lower }}.controller.group:createAction
        _sylius:
            template: {{ applicationName }}BackendBundle:Group:create.html.twig
            redirect: {{ applicationName|lower }}_backend_group_index

{{ applicationName|lower }}_backend_group_update:
    path: /edit/{id}
    methods: [GET, PUT, POST]
    defaults:
        _controller: {{ applicationName|lower }}.controller.group:updateAction
        _sylius:
            template: {{ applicationName }}BackendBundle:Group:update.html.twig
            redirect: {{ applicationName|lower }}_backend_group_index

{{ applicationName|lower }}_backend_group_delete:
    path: /{id}
    methods: [DELETE]
    defaults:
        _controller: {{ applicationName|lower }}.controller.group:deleteAction
        _sylius:
            template: {{ applicationName }}WebBundle:Misc:delete.html.twig
            redirect: {{ applicationName|lower }}_backend_group_index
