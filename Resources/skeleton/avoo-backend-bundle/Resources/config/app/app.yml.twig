{{ applicationName|lower }}_backend:
    driver: doctrine/orm
    menu_builder:
        attributes:
            childrenAttributes:
                class: sidebar-menu
        nav:
            user:
                label: {{ applicationName|lower }}_backend.title.users.index
                route: {{ applicationName|lower }}_backend_user_index
                role: {{ applicationName|lower }}.user.index
                attributes:
                    labelAttributes:
                        icon: fa fa-user
            group:
                label: {{ applicationName|lower }}_backend.title.groups.index
                route: {{ applicationName|lower }}_backend_group_index
                role: {{ applicationName|lower }}.group.index
                attributes:
                    labelAttributes:
                        icon: fa fa-list-ol
            role:
                label: {{ applicationName|lower }}_backend.title.roles.index
                route: {{ applicationName|lower }}_backend_role_index
                role: sylius.role.index
                attributes:
                    labelAttributes:
                        icon: fa fa-sort-amount-desc
