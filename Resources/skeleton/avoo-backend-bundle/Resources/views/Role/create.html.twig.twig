{% block extends %}
{{ "{% extends '" ~ applicationName ~ "BackendBundle::layout.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block breadcrumb %}" }}
    <ol class="breadcrumb">
        <li><a href="{{ "{{ path('" ~ applicationName|lower ~ "_dashboard') }}" }}">{{ "{{ '" ~ applicationName|lower ~ "_backend.title.dashboard'|trans }}" }}</a></li>
        <li><a href="{{ "{{ path('" ~ applicationName|lower ~ "_backend_role_index') }}" }}">{{ "{{ '" ~ applicationName|lower ~ "_backend.title.roles.index'|trans }}" }}</a></li>
        <li>{{ "{{ '" ~ applicationName|lower ~ "_backend.title.roles.add'|trans }}" }}</li>
    </ol>
{{ "{% endblock %}" }}

{{ "{% block content %}" }}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <form novalidate action="{{ "{{ path('" ~ applicationName|lower ~ "_backend_role_create') }}" }}" method="post">
                <div class="box-body">
                    {{ "{% include '" ~ applicationName ~ "BackendBundle:Role:_form.html.twig' %}" }}
                    {{ "{{ actions.cancel(path('" ~ applicationName|lower ~ "_backend_role_index')) }}" }}
                    {{ "{{ actions.submit() }}" }}
                </div>
            </form>
        </div>
    </div>
</div>
{{ "{% endblock %}" }}
{% endblock body %}
