{% block body %}
<!DOCTYPE html>

<html>
<head>
    <title></title>
    <meta charset="UTF-8">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {{ "{% block stylesheets %}" }}
    {{ "{% endblock %}" }}
</head>
<body class="signin">
<form method="post" action="{{ "{{ path('" ~ applicationName|lower ~ "_backend_security_login_check') }}" }}" class="form-signin">
    {{ "{% if error %}" }}
        <div class="alert alert-danger">
            {{ "{{ error }}" }}
        </div>
    {{ "{% endif %}" }}

    <input type="text" name="_username" class="form-control input-lg" placeholder="{{ "{{ '" ~ applicationName|lower ~ "_backend.label.email'|trans }}" }}"><br>
    <input type="password" name="_password" class="form-control input-lg" placeholder="{{ "{{ '" ~ applicationName|lower ~ "_backend.label.password'|trans }}" }}">
    <hr>
    <button class="btn btn-block btn-lg btn-success" type="submit">{{ "{{ '" ~ applicationName|lower ~ "_backend.button.login'|trans }}" }}</button>
</form>
</body>
</html>
{% endblock body %}
