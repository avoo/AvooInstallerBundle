<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="{{ applicationName|lower }}.form.type.user" class="%{{ applicationName|lower }}.form.type.user.class%">
            <argument>%{{ applicationName|lower }}.model.user.class%</argument>
            <tag name="form.type" alias="{{ applicationName|lower }}_user" />
        </service>

        <service id="{{ applicationName|lower }}.form.type.group" class="%{{ applicationName|lower }}.form.type.group.class%">
            <argument>%{{ applicationName|lower }}.model.group.class%</argument>
            <argument type="collection">
                <argument>{{ applicationName|lower }}</argument>
            </argument>
            <tag name="form.type" alias="{{ applicationName|lower }}_group" />
        </service>
    </services>
</container>
