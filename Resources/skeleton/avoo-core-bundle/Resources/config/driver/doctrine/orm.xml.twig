<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="{{ applicationName|lower }}.form.type.group_choice.class">{{ applicationName }}\Bundle\CoreBundle\Form\Type\GroupEntityType</parameter>
    </parameters>

    <services>
        <service id="{{ applicationName|lower }}.form.type.group_choice" class="%{{ applicationName|lower }}.form.type.group_choice.class%">
            <argument>%{{ applicationName|lower }}.model.group.class%</argument>
            <tag name="form.type" alias="{{ applicationName|lower }}_group_choice" />
        </service>
    </services>

</container>
