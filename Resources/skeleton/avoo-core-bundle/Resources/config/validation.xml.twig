<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="{{ applicationName }}\Component\Core\Model\User">
        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>ProfileAdd</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="{{ applicationName }}\Component\Core\Model\Group">
    <property name="name">
        <constraint name="NotBlank">
            <option name="message">{{ applicationName|lower }}.group.name.not_blank</option>
            <option name="groups">
                <value>{{ applicationName }}</value>
            </option>
        </constraint>
        <constraint name="Length">
            <option name="min">2</option>
            <option name="minMessage">{{ applicationName|lower }}.group.name.min</option>
            <option name="max">255</option>
            <option name="maxMessage">{{ applicationName|lower }}.group.name.max</option>
            <option name="groups">
                <value>{{ applicationName }}</value>
            </option>
        </constraint>
    </property>
    </class>
</constraint-mapping>
